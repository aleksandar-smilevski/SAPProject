@model IEnumerable<SAP.Models.ApplicationUser>

@{
    ViewBag.Title = "Admin Page";
}
<div ng-app="SapApp" ng-controller="PaginationController">
    <h4 class="page-header">

        Users
        <a href="@Url.Action("Create","Admin")"><i class="glyphicon glyphicon-plus"></i></a>
    </h4>
    <form action="@Url.Action("Index","Admin")" method="get" class="form-group">
        <input type="text" class="form-control" placeholder="Filter by name " name="search" value="" />
        <br />
        <button type="submit" class="btn btn-primary" value="Search">Search</button>
    </form>

    <table class="table table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email) | 
                    @Html.ActionLink("Statistics", "Statistics", new { id_clicked = item.Id }) 
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <pagination count="custom.itemsCount" take="custom.take" activate="custom.activatePage"></pagination>
</div>
@section Scripts{
<script src="~/Scripts/angular.min.js"></script>    
<script src="~/app/app.js"></script>
<script src="~/Scripts/directive.pagination.min.js"></script>}